<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="滚动与过渡效果">

        <SeekBarPreference
            android:defaultValue="10"
            android:max="20"
            app:key="scrollSensitivity"
            app:min="1"
            app:summary="当前值将在此显示"
            app:title="背景滚动灵敏度"
            app:updatesContinuously="true" />

        <SeekBarPreference
            android:defaultValue="50"
            android:max="100"
            app:key="p1OverlayFadeRatio"
            app:min="1"
            app:summary="当前值将在此显示"
            app:title="P1 淡出过渡比例"
            app:updatesContinuously="true" />

        <SeekBarPreference
            android:defaultValue="80"
            android:max="100"
            app:key="p2BackgroundFadeInRatio"
            app:min="1"
            app:summary="当前值将在此显示"
            app:title="P2 淡入过渡比例"
            app:updatesContinuously="true" />

        <SeekBarPreference
            android:defaultValue="2"
            android:max="10"
            app:key="backgroundInitialOffset"
            app:min="0"
            app:summary="当前值将在此显示"
            app:title="背景初始偏移比例"
            app:updatesContinuously="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="背景效果">

        <SeekBarPreference
            android:defaultValue="25"
            android:max="25"
            app:key="backgroundBlurRadius"
            app:min="0"
            app:summary="当前值将在此显示"
            app:title="背景模糊半径"
            app:updatesContinuously="true" />
        <SeekBarPreference
            android:defaultValue="25"
            android:max="100"
            app:key="blurDownscaleFactor"
            app:min="5"
            app:summary="值越小，模糊越强但可能失真"
            app:title="模糊降采样强度"
            app:updatesContinuously="true" />

        <SeekBarPreference
            android:defaultValue="1"
            android:max="3"
            app:key="blurIterations"
            app:min="1"
            app:summary="增加迭代可增强模糊"
            app:title="模糊迭代次数"
            app:updatesContinuously="true" />

    </PreferenceCategory>
    <PreferenceCategory app:title="P1 前景图片效果">

        <SeekBarPreference
            android:defaultValue="0"
            android:max="20"
            app:key="p1ShadowRadius"
            app:min="0"
            app:summary="当前值将在此显示"
            app:title="P1 图片投影半径"
            app:updatesContinuously="true" />

        <SeekBarPreference
            android:defaultValue="0"
            android:max="20"
            app:key="p1ShadowDx"
            app:min="-20"
            app:summary="当前值将在此显示"
            app:title="P1 图片投影X轴偏移"
            app:updatesContinuously="true" />

        <SeekBarPreference
            android:defaultValue="0"
            android:max="20"
            app:key="p1ShadowDy"
            app:min="0"
            app:summary="当前值将在此显示"
            app:title="P1 图片投影Y轴偏移"
            app:updatesContinuously="true" />

        <SeekBarPreference
            android:defaultValue="0"
            android:max="2560"
            app:key="p1ImageBottomFadeHeight"
            app:min="0"
            app:summary="当前值将在此显示"
            app:title="P1 图片底部融入高度"
            app:updatesContinuously="true" />

    </PreferenceCategory>

</PreferenceScreen>