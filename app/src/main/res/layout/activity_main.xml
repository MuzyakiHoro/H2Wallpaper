<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnSelectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_image_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvPreviewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/preview_label_page1"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnSelectImage"
        app:layout_constraintStart_toStartOf="parent"/>

    <FrameLayout
        android:id="@+id/previewContainer"
        android:layout_width="0dp"
        android:layout_height="200dp" android:layout_marginTop="8dp"
        android:background="#CCCCCC" app:layout_constraintTop_toBottomOf="@id/tvPreviewLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/viewColorPreviewBottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E0E0E0" /> <ImageView
        android:id="@+id/ivImagePreviewTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:scaleType="centerCrop" android:contentDescription="@string/image_preview_description"
        android:background="#00000000" /> </FrameLayout>


    <TextView
        android:id="@+id/tvSelectColorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_background_color_label"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/previewContainer"
        app:layout_constraintStart_toStartOf="parent" />

    <HorizontalScrollView
        android:id="@+id/hsvColorPalette"
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSelectColorLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/colorPaletteContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"/> </HorizontalScrollView>

    <Button
        android:id="@+id/btnSetWallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_wallpaper_button"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/hsvColorPalette"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>